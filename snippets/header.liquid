<!-- HEADER SNIPPET -->

<header class="header-global">
    <div class="header-inner">
        <a
            href="{% if template != 'index' %}/{% else %}#{% endif %}"
            class="logo"
        >
            <img
                src="{{ 'logo.svg' | asset_url }}"
                alt="{{ 'general.shop.title' | t }}"
            />
        </a>

        <a
            href="{% if template != 'index' %}/{% else %}#shop{% endif %}"
            class="shop-link text-link"
            >{{ 'header.nav.shop' | t }}</a
        >

        {% assign cart_text = 'cart.button.count_html' | t: itemCount:
        cart.item_count %} {% assign cart_close_text = 'cart.button.close' | t
        %}

        <a href="/cart" class="cart-link text-link js-cart-link">
            <span class="cart-text">{{ cart_text }}</span>
            <span class="cart-close-text">{{ cart_close_text }}</span>
        </a>
    </div>
</header>
